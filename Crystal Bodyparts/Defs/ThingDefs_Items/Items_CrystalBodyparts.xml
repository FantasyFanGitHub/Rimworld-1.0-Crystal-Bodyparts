<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef Name="CBPBodyPartBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
	<graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
	<techLevel>Medieval</techLevel>
    <category>Item</category>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
	<thingCategories>
      <li>CBPBodyparts</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0.7</Flammability>
	  <Beauty>-4</Beauty>
	  <DeteriorationRate>4.0</DeteriorationRate>
	</statBases>
	<techHediffsTags>
      <li>Simple</li>
    </techHediffsTags>
    <altitudeLayer>Item</altitudeLayer>
    <tickerType>Never</tickerType>
    <alwaysHaulable>true</alwaysHaulable>
    <isTechHediff>true</isTechHediff>
    <tradeTags>
      <li>TechHediff</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <pathCost>10</pathCost>
  </ThingDef>

  <!--=======Normal===============-->
  
  <ThingDef ParentName="CBPBodyPartBase">
    <defName>CrystalLung</defName>
    <label>Crystal lung</label>
    <description>An artifical lung. A pair of these form the core of the human respiratory system.</description>
	<graphicData>
      <texPath>Things/Item/NormalBodyparts/LungBlue</texPath>
    </graphicData>
    <statBases>
      <MarketValue>400</MarketValue>
      <Mass>1</Mass>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="CBPBodyPartBase">
    <defName>CrystalKidney</defName>
    <label>Crystal kidney</label>
    <description>An artifical kidney. Filters and removes waste products from the blood.</description>
	<graphicData>
      <texPath>Things/Item/NormalBodyparts/KidneyBlue</texPath>
    </graphicData>
    <statBases>
      <MarketValue>250</MarketValue>
      <Mass>1</Mass>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="CBPBodyPartBase">
    <defName>CrystalLiver</defName>
    <label>Crystal liver</label>
